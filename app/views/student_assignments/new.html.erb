<% content_for(:title, "Administration - Courses - new course") %>

<main class="main">
  <%=  render 'layouts/adminMenu'%>

  <div class="center-me">
    <% if flash[:errors] %>
      <% flash[:errors].each do |e|%>
        <p><%= e %></p>
      <% end %>
    <%end %>

    <%= simple_form_for @studentAssignment do |f| %>
      <%= f.input :student_id, :as => :select, :collection => Hash[Student.all.map { |st| [st.first_name + " " + st.last_name, st.id] }], prompt: "Select a student" %>
      <%= f.input :course_id, collection: Course.all, prompt: "Select a student" %>
      <%= f.button :submit %>
    <% end %>
  </div>

</main>