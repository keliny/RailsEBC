<% content_for(:title, "Administration - Rooms - new room") %>

<main class="main">
  <%=  render 'layouts/adminMenu'%>

  <div class="center-me">
    <% if flash[:errors] %>
      <% flash[:errors].each do |e|%>
        <p><%= e %></p>
      <% end %>
    <%end %>

    <%= simple_form_for @rooms do |f| %>
      <%= f.input :code %>
      <%= f.input :title %>
      <%= f.input :capacity %>
      <%= f.input :building_id, collection: Building.all, prompt: "Select a building" %>
      <%= f.button :submit %>
    <% end %>
  </div>

</main>