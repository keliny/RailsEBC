<% content_for(:title, "Administration - Buildings") %>

<main class="main">
  <%=  render 'layouts/adminMenu'%>





  <div>
    <% if flash[:errors] %>
      <% flash[:errors].each do |e|%>
        <p><%= e %></p>
      <% end %>
    <%end %>

    <%= simple_form_for @building do |f| %>
      <%= f.input :code, label: "Building code goes here.", error: 'Code is mandatory, please specify one.'%>
      <%= f.input :title, label: "Building title goes here.", error: 'Title is mandatory, please specify one.'%>
      <%= f.input :description, label: "Building description goes here.", error: 'Description is mandatory, please specify one.'%>
      <%= f.button :submit %>
    <% end %>
  </div>

</main>