<% content_for(:title, "Administration - Teachers - edit") %>

<main class="main">
  <%=  render 'layouts/adminMenu'%>

  <div>
    <% if flash[:errors] %>
      <% flash[:errors].each do |e|%>
        <p><%= e %></p>
      <% end %>
    <%end %>

    <%= simple_form_for @course do |f| %>
      <%= f.input :code, error: 'Value is mandatory, please specify one.'%>
      <%= f.input :title, error: 'Value is mandatory, please specify one.'%>
      <%= f.input :language_type, collection: Course.language_type.values, prompt: "Select a language", selected: @course.language_type %>
      <%= f.input :study_type, collection: Course.study_type.values, prompt: "Select a study_type", selected: @course.study_type %>
      <%= f.button :submit %>
    <% end %>
  </div>

</main>