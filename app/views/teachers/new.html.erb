<% content_for(:title, "Administration - Teachers - new teacher") %>

<main class="main">
  <%=  render 'layouts/adminMenu'%>

  <div class="center-me">
    <% if flash[:errors] %>
      <% flash[:errors].each do |e|%>
        <p><%= e %></p>
      <% end %>
    <%end %>

    <%= simple_form_for @teacher do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.button :submit %>
    <% end %>
  </div>

</main>